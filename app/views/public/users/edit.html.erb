<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="col-md-6 headline mb-4">ユーザー情報編集</h2>
      <%= form_with model: @user, url:users_information_path do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group row mt-3">
        <label class="col-md-3 col-form-label">ニックネーム</label>
        <div class="col-md-3">
          <%= f.text_field :name , class:"form-control" %>
        </div>
      </div>
  
      <div class="form-group mt-3 row">
        <label class="col-md-3 col-form-label">メールアドレス</label>
        <div class="col-md-6">
          <%= f.text_field :email, class:" form-control" %>
        </div>
      </div>
      
      <div class="form-group mt-3 row">
        <label class="col-md-3 col-form-label">プロフィール画像</label>
        <div class="col-md-3">
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
      </div>
      
      <div class="col-md-6 d-flex justify-content-between m-auto mt-2 mb-2">
        <div class="form-group mt-3">
          <%= f.submit '編集内容を保存', class: 'btn btn-md btn-success' %>
        </div>
      <% end %>
        <div class="align-items-center mt-3">
          <%= link_to "退会する", users_unsubscribe_path, class: 'btn btn-md btn-danger ' %>
        </div>
      </div>
    </div>
  </div>
</div>