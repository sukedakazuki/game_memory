<div class="col-md-3">
  <h2 class="col-md-8 bg-dark text-white">Profile</h2>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
    <table class="table">
      <tbody>
        <tr>
          <th>ニックネーム</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>レビュー数</th>
          <th><%= current_user.reviews.count %></th>
        </tr>
      </tbody>
    </table>
  <div class="row">
    <%= link_to users_information_edit_path(user.id), class: "btn btn-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>編集
    <% end %>
  </div>
</div>