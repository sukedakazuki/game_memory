<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'profile', user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Reviews</h2>
      <div>
        <%= link_to '新しい順', reviews_path(latest: "true") %>
        <%= link_to '古い順', reviews_path(old: "true") %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th class="col-md-3">コメント数</th>
            <th>投稿日</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td><%= image_tag review.game.image_url %></td>
            <td><%= link_to review.game.title, review_path(review.id) %></td>
            <td class="col-md-2"><%= render "public/post_comments/counter", review: review %></td>
            <td><%= review.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>