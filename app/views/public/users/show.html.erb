<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'profile', user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Reviews</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>登録日</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td><%= image_tag review.game.image_url %></td>
            <td><%= link_to review.game.title, review_path(review.id) %></td>
            <td><%= review.created_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>