<div class="row align-items-center">
  <div class="col-sm-4 offset-md-2 d-flex justify-content-center">
    <%= image_tag 'logo.jpg', class: 'logo-image' %>
  </div>
  <div class="col-sm-4 text-center p-4">
    <h1>Game Memory</h1>
    <div class="d-flex justify-content-center mt-4">
      <% if current_user %>
        <p><%= link_to 'マイページ', users_information_path, class: 'btn btn-secondary ms-4 mr-4' %></p>
        <p><%= link_to 'ゲームを探す', games_search_path, class: 'btn btn-secondary ms-4' %></p>
      <% else %>
        <p><%= link_to '新規登録', new_user_registration_path, class: 'btn btn-secondary ms-4 mr-4' %></p>
        <p><%= link_to 'ログイン', new_user_session_path, class: 'btn btn-secondary ms-4' %></p>
      <% end %>
    </div>
  </div>
</div>