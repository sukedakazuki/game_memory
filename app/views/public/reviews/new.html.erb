<div class="container">
  <div class="row">
    <div class='col-md-10 offset-md-1'>
    <h2>Review</h2>
      <table>
        <tr class="form-group mt-3">
          <td><%= image_tag @game.image_url %><%= @game.title %></td>
        </tr>
      </table>
      <%= form_with model: @new do |f| %>
      <h3 class="mt-5">レビュー</h3>
      <div class="form-group mt-3">
        <%= f.text_area :comment, class: 'form-control',size: "20x10" %>
      </div>
      <div class="form-group" id="rate">
        <%= f.label :評価 %>
        <%= f.hidden_field :rate, id: :review_rate, class: 'form-control' %>
        <div id="post_raty"></div>
      </div>
      <script>
        // scriptファイルをどのidの部分に配置するかを指定
        let elem = document.querySelector('#post_raty');
        let opt = {  
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'review[rate]',
         };
        raty(elem,opt);
      </script>
      <div class="form-group mt-3">
        <%= f.hidden_field :game_id, :value => @new.game_id %>
        <%= f.submit '内容を保存', class: 'btn btn-md btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>