<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
  　   <h2 class="col-md-6 headline mb-4">投稿内容編集</h2>
      <%= form_with model: @review, url:edit_review_path do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group row mt-3">
        <label class="col-md-3 col-form-label">コメント</label>
        <div class="col-md-3">
          <%= f.text_area :comment , class:"form-control",style: "width:300%; height:300%" %>
        </div>
      </div>
  </br>
  </br>
  </br>
  </br>
  </br>
      <div class="form-group" id="rate">
        <%= f.label :評価 %>
        <%= f.hidden_field :rate, id: :review_rate, class: 'form-control' %>
        <div id="post_raty"></div>
      </div>
      <script>
          let elem = document.querySelector('#post_raty');

          let opt = {  
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            scoreName: 'review[rate]',
          };
          raty(elem, opt);
      </script>
      
      <div class="col-md-6 d-flex justify-content-between m-auto mt-2 mb-2">
        <div class="form-group mt-3">
          <%= f.submit '編集内容を保存', class: 'btn btn-md btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>