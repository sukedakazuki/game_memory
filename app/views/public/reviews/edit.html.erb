<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
  　   <h2 class="col-md-6 headline mb-4">投稿内容編集</h2>
      <%= form_with model: @review, url:edit_review_path do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group row mt-3">
        <label class="col-md-3 col-form-label">コメント</label>
        <div class="col-md-3">
          <%= f.text_area :comment , class:"form-control" %>
        </div>
      </div>
  
      <div class="form-group mt-3 row">
        <label class="col-md-3 col-form-label">評価</label>
        <div class="col-md-6">
          <%= f.text_field :rate, class:" form-control" %>
        </div>
      </div>
      
      <div class="col-md-6 d-flex justify-content-between m-auto mt-2 mb-2">
        <div class="form-group mt-3">
          <%= f.submit '編集内容を保存', class: 'btn btn-md btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>