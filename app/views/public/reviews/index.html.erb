<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'public/users/profile', user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Reviews</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th class="col-md-2">いいね</th>
            <th class="col-md-3">コメント数</th>
            <th>投稿日</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td>
              <%= link_to review_path(review.id) do %>
              <%= image_tag review.game.image_url %>
              <% end %>
            </td>
            <td><%= link_to review.game.title, review_path(review.id) %></td>
            <% if review.favorited_by?(current_user) %>
              <td>
                <%= link_to review_favorites_path(review), method: :delete do %>
                  <i class="fas fa-heart" aria-hidden="true" style="color: red;"><%= review.favorites.count %></i>
                <% end %>
              </td>
            <% else %>
              <td>
                <%= link_to review_favorites_path(review), method: :post do %>
                  <i class="fas fa-heart" aria-hidden="true"><%= review.favorites.count %></i>
                <% end %>
              </td>
            <% end %>
            <td class="col-md-2"><%= render "public/post_comments/counter", review: review %></td>
            <td><%= review.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
