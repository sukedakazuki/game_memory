<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>Profile</h2>
      <p><%= image_tag @user.get_profile_image(100,100) %></p>
        <table class="table">
          <tbody>
            <tr>
              <th>ニックネーム</th>
              <th><%= @user.name %></th>
            </tr>
          </tbody>
        </table>
      <div class="row">
        <%= link_to users_information_edit_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Reviews</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>投稿日</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td>
              <%= link_to review_path(review.id) do %>
              <%= image_tag review.game.image_url %>
              <% end %>
            </td>
            <td><%= link_to review.game.title, review_path(review.id) %></td>
            <td><%= review.created_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
