<%= render"layouts/error_messages", model: @review %>
<div class="container mt-5">
  <div class="row justify-content-center mb-3">
    <div class="col-md-8">
    
      <div class="justify-content-center mb-3">
        <div class="col-md-12 headline">
          <h4><strong><%= @review.game.title%></strong>のレビュー編集</h4>
        </div>
      </div>

        <%= form_with model: @review, url:admin_review_path, method: :patch do |f| %>
          <table class="table table-borderless">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>ID</td>
                <td><%= @review.id %></td>
              </tr>
              <tr>
                <td><%= f.label :レビュー,class:"col-form-label" %></td>
                <td><%= f.text_area :comment, autocomplete: "comment",class:"form-control", size: "20x10" %></td>
              </tr>
              <tr>
                <td><%= f.label :評価,class:"col-form-label" %></td>
                <td><%= f.hidden_field :rate, autocomplete: "rate",class:"form-control" %>
                  <div id="post_raty"></div>
                  <script>
                      let elem = document.querySelector('#post_raty');
            
                      let opt = {  
                        starOn: "<%= asset_path('star-on.png') %>",
                        starOff: "<%= asset_path('star-off.png') %>",
                        starHalf: "<%= asset_path('star-half.png') %>",
                        scoreName: 'review[rate]',
                      };
                      raty(elem, opt);
                  </script>
                </td>
              </tr>
              <tr>
                <td><%= f.label :is_deleted,"ステータス",class:"col-form-label" %></td>
                <td>
                  <%= f.radio_button :is_deleted, :false,class:"form-check-input" %>
                  <%= f.label :is_deleted, "有効",class:"form-check-label" %>
                </td>
                <td>
                  <%= f.radio_button :is_deleted, :true,class:"form-check-input" %>
                  <%= f.label :is_deleted, "削除",class:"form-check-label" %>
                </td>
              </tr>
            </tbody>
          </table>
  
          <div class=" mt-3 text-center">
            <%= f.submit "変更を保存", class: "btn btn-success"%>
          </div>
  
        <% end %>
    </div>
  </div>
</div>
