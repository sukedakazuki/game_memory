<div class= 'container mt-4'>
  <div class="col-md-10 mx-auto">
    <div class="row justify-content-center mb-3">
      <div class="col-md-12">
        <h4>ユーザ一覧</h4>
      </div>
    </div>

    <table class ="table table-bordered border-dark table-hover align-middle">
      <thead class="bg-secondary">
        <tr align="center">
          <th scope="col" style="width: 10%">ID</th>
          <th scope="col" style="width: 30%">ニックネーム</th>
          <th scope="col" style="width: 40%">メールアドレス</th>
          <th scope="col" style="width: 20%">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user|%>
        <tr align="center">
        <td><%= user.id %></td>
        <td>
          <%= link_to admin_user_path(user.id), class:"text-dark border-bottom" do  %>
          <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_deleted == true %>
          <strong style="color:darkgray;"><%= "退会" %></strong>
          <% else %>
          <strong style="color:green;"><%= "有効" %></strong>
          <% end %>
        </td>
        <% end %>
      </tbody>
    </table>

  </div>
</div>