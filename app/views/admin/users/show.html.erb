<div class="container mt-4">
  <div class="col-md-12 mx-auto">

    <div class="row justify-content-center mb-3">
      <div class="col-md-8 headline">
        <h4><strong><%= @user.name%></strong>さんのユーザ詳細</h4>
      </div>
    </div>
    
    <div class="col-md-6 text-center mx-auto">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th scope="col" style="width: 30%"></th>
            <th scope="col" style="width: 70%"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>ニックネーム</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td>
              <% if @user.is_deleted == true %>
              <strong style="color:darkgray;"><%= "退会" %></strong>
              <% else %>
              <strong style="color:green;"><%= "有効" %></strong>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="col-md-2 row justify-content-between mx-auto mt-3">
    <td><%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success change_button mt-3"%></td>
  </div>
  
</div>